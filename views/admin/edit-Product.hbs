<body>

    {{>sidebar}}
    <div class="page-wrapper ">
        <form action="/admin/edit-Product/{{productData._id}}" method="post" id="productValidation" enctype="multipart/form-data">
            <div class="container register">
                <div class="row">
                    <div class="col-md-9 register-right">
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                {{!-- <h3 class="register-heading">Edit Product</h3> --}}
                                <div class="row register-form">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="inputEmail4">Name</label>
                                            <input type="text" class="form-control" id="inputEmail4" placeholder="Name"
                                                name="name" value="{{productData.name}}">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputPassword4">MRP Price</label>
                                            <input type="number" class="form-control" id="inputPassword4"
                                                placeholder="Price" name="mrpprice" value="{{productData.mrpprice}}">
                                        </div>
                                        <div class="form-group">
                                        <label for="brand">Brand</label>
                                        <input type="text" class="form-control" id="input" placeholder="Brand Name"
                                            name="brand">
                                    </div>
                                        <div class="form-group">
                                            <label for="inputAddress">Description</label>
                                            <input type="text" class="form-control" id="inputAddress"
                                                placeholder="Description" name="description"
                                                value="{{productData.description}}">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="inputAddress2">Stock</label>
                                            <input type="number" class="form-control" id="inputAddress2"
                                                placeholder="Stock" name="stock" value="{{productData.stock}}">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputCity">Discount</label>
                                            <input type="number" class="form-control" id="inputCity"
                                                placeholder="Discount" name="discount" value="{{productData.discount}}">
                                        </div>
                                         <div>
                                    <label for="inputState">Category</label>
                                    <select id="inputState" class="form-control" name="category">
                                        {{!-- <option selected>Choose....</option> --}}
                                        {{#each category}}
                                        <option>{{this.Name}}</option>
                                        {{/each}}
                                    </select>
                                    </div>
                                    </div>
                                    <!-- Image Input -->

                                    <div class="row ">
                                        <div class="col">
                                            <div class="form-outline">
                                                <img src="/images/{{productData.images.[0].image1}}" alt=""
                                                    style="width: 85px;height: 85px;">
                                                <input type="text" id="form6Example1"
                                                    value="{{productData.images.[0].image1}}" class="form-control"
                                                    style="display: none;" name="image1">
                                                <input type="file" id="form6Example1" class="form-control mb-6"
                                                    name="image_1">
                                                <label class="form-label" for="form6Example1">Image 1</label>
                                            </div>
                                        </div>
                                        <div class="col ">
                                            <div class="form-outline">
                                                <img src="/images/{{productData.images.[0].image2}}" alt=""
                                                    style="width: 85px;height: 85px;">
                                                <input type="text" value="{{productData.images.[0].image2}}"
                                                    id="form6Example2" class="form-control mb-6" style="display: none;"
                                                    name="image2" >
                                                <input type="file" id="form6Example2" class="form-control mb-6"
                                                    name="image_2" />
                                                <label class="form-label" for="form6Example2">Image 2</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row ">
                                        <div class="col">
                                            <div class="form-outline">
                                                <img src="/images/{{productData.images.[0].image3}}" alt=""
                                                    style="width: 85px;height: 85px;">
                                                <input type="text" value="{{productData.images.[0].image3}}"
                                                    style="display: none;" id="form6Example1" class="form-control"
                                                    name="image3" />
                                                <input type="file" id="form6Example1" class="form-control mb-6"
                                                    name="image_3" >
                                                <label class="form-label" for="form6Example1">Image 3</label>
                                            </div>
                                        </div>
                                        <div class="col ">
                                            <div class="form-outline">
                                                <img src="/images/{{productData.images.[0].image4}}" alt=""
                                                    style="width: 85px;height: 85px;">
                                                <input type="text" value="{{productData.images.[0].image4}}"
                                                    style="display: none;" id="form6Example2" class="form-control"
                                                    name="image4" />
                                                <input type="file" id="form6Example2" class="form-control mb-6"
                                                    name="image_4" >
                                                <label class="form-label " for="form6Example2">Image 4</label>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Submit button -->
                                    <button type="submit"
                                        class="btn btn-primary btn-block mb-4 float-end">Submit</button>
        </form>
    </div>
    </div>
    </div>
    </section>
    <!-- Content End -->
    </div>
    </div>
    </div>
    </div>
    </div>
    </div>

