    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <script src="/javascripts/user/validation.js"></script>
  <script src="/javascripts/user/jquery-3.3.1.min.js"></script>
  <script src="/javascripts/user/loginmain.js"></script>
</body>

</html>