<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

	<title>Electro</title>

	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

	<!-- Bootstrap -->
	<link type="text/css" rel="stylesheet" href="stylesheets/user/bootstrap.min.css" />

	<!-- Slick -->
	<link type="text/css" rel="stylesheet" href="stylesheets/user/slick.css" />
	<link type="text/css" rel="stylesheet" href="stylesheets/user/slick-theme.css" />

	<!-- nouislider -->
	<link type="text/css" rel="stylesheet" href="stylesheets/user/nouislider.min.css" />

	<!-- Font Awesome Icon -->
	<link rel="stylesheet" href="stylesheets/user/font-awesome.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

	<!-- Custom stlylesheet -->
	<link type="text/css" rel="stylesheet" href="stylesheets/user/style.css" />

	{{!-- Ajax --}}
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->

</head>

<body>
	<!-- HEADER -->
	<header>


		<!-- MAIN HEADER -->
		<div id="header">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<!-- LOGO -->
					<div class="col-md-3">
						<div class="header-logo">
							<a href="#" class="logo">
								<img src="/images/logo.png" alt="">
							</a>
						</div>
					</div>
					<!-- /LOGO -->

					<!-- SEARCH BAR -->
					<div class="col-md-6">
						<div class="header-search">
							<form>
								<select class="input-select">
									<option value="0">All Categories</option>
									<option value="1">Category 01</option>
									<option value="1">Category 02</option>
								</select>
								<input class="input" placeholder="Search here">
								<button class="search-btn">Search</button>
							</form>
						</div>
					</div>
					<!-- /SEARCH BAR -->

					<!-- ACCOUNT -->
					<div class="col-md-3 clearfix">
						<div class="header-ctn">
							<!-- Cart -->
							<div>
								<a href="/view-cart">
									<i class="fa fa-shopping-cart"></i>
									<span>Your Cart</span>
									<div class="qty" id="cart-count">{{cartCount}}</div>
								</a>
							</div>
							<!-- /Cart -->
							<!-- Wishlist -->
							<div>
								<a href="/view-wish-list">
									<i class="fa fa-heart-o"></i>
									<span>Your Wishlist</span>
									<div class="qty" id="wishlist-count">{{wishListCount}}</div>
								</a>
							</div>
							<!-- /Wishlist -->
						</div>
					</div>
					<!-- /ACCOUNT -->
				</div>
				<!-- row -->
			</div>
			<!-- container -->
		</div>
		<!-- /MAIN HEADER -->
		<!-- TOP HEADER -->
		<div id="top-header">
			<div class="container">
				<div class="dropdown header-links pull-right">
					<div class="dropdown header-links pull-right">
						{{#if user}}
						<li><a href=""><i class="fa fa-user-o"></i>{{user.Name}}</a></li>
						<li><a href="/profile">My Profile</a></li>
						<li><a href="/logout">Logout</a></li>
						{{else}}
						<li><a href="/login"><i class="fa fa-user-o"></i>Login</a></li>
						{{/if}}
					</div>
				</div>
			</div>
			<!-- /TOP HEADER -->
	</header>
	<!-- /HEADER -->

	<!-- BREADCRUMB -->
	<div id="breadcrumb" class="section">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<div class="col-md-12">
					<h3 class="breadcrumb-header">My Oders</h3>
					<ul class="breadcrumb-tree">
						<a href="/">
							<li>Home</li>
						</a>
						<li class="active">/My Oders</li>
					</ul>
				</div>
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
	<!-- /BREADCRUMB -->

	<div class="container">
		<table class="table">
			<thead>
				<tr>
					{{!-- <th scope="col">Ordered on</th> --}}
					<th scope="col">Deliver To</th>
					{{!-- <th scope="col">Amount</th> --}}

					<th scope="col">Payment Method</th>
					<th scope="col">Status</th>
					<th scope="col">View Order</th>
				</tr>
			</thead>
			<tbody>
				{{#each orders}}
				<tr>
					{{!-- <td scope="row">{{this.ordered_on}}</td> --}}
					<td>{{this.shippingAddress.Name}}</td>
					{{!-- <td>{{this.grandTotal}}</td> --}}
					<td>{{this.payment_Method}}</td>
					{{#if cancel}}
					<td>Order Cancelled</td>
					{{else}}
					<td>{{this.status}}
					{{/if}}
					<td><a href='/order-detail/{{this._id}}' class="btn_3" style="font-size:xx-small;">View Order</a>
					</td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>

	<!-- FOOTER -->
	<footer id="footer">
		<!-- top footer -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<div class="col-md-3 col-xs-6">
						<div class="footer">
							<h3 class="footer-title">About Us</h3>
							<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
								incididunt ut.</p>
							<ul class="footer-links">
								<li><a href="#"><i class="fa fa-map-marker"></i>1734 Stonecoal Road</a></li>
								<li><a href="#"><i class="fa fa-phone"></i>+021-95-51-84</a></li>
								<li><a href="#"><i class="fa fa-envelope-o"></i>email@email.com</a></li>
							</ul>
						</div>
					</div>

					<div class="col-md-3 col-xs-6">
						<div class="footer">
							<h3 class="footer-title">Categories</h3>
							<ul class="footer-links">
								<li><a href="#">Hot deals</a></li>
								<li><a href="#">Laptops</a></li>
								<li><a href="#">Smartphones</a></li>
								<li><a href="#">Cameras</a></li>
								<li><a href="#">Accessories</a></li>
							</ul>
						</div>
					</div>

					<div class="clearfix visible-xs"></div>

					<div class="col-md-3 col-xs-6">
						<div class="footer">
							<h3 class="footer-title">Information</h3>
							<ul class="footer-links">
								<li><a href="#">About Us</a></li>
								<li><a href="#">Contact Us</a></li>
								<li><a href="#">Privacy Policy</a></li>
								<li><a href="#">Orders and Returns</a></li>
								<li><a href="#">Terms & Conditions</a></li>
							</ul>
						</div>
					</div>

					<div class="col-md-3 col-xs-6">
						<div class="footer">
							<h3 class="footer-title">Service</h3>
							<ul class="footer-links">
								<li><a href="#">My Account</a></li>
								<li><a href="#">View Cart</a></li>
								<li><a href="#">Wishlist</a></li>
								<li><a href="#">Track My Order</a></li>
								<li><a href="#">Help</a></li>
							</ul>
						</div>
					</div>
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /top footer -->
	</footer>
	<!-- /FOOTER -->



	<!-- jQuery Plugins -->
	<script src="javascripts/user/bootstrap.min.js"></script>
	<script src="javascripts/user/slick.min.js"></script>
	<script src="javascripts/user/nouislider.min.js"></script>
	<script src="javascripts/user/jquery.zoom.min.js"></script>
	<script src="javascripts/user/main.js"></script>


</body>

</html>