		<!-- SECTION -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<form action="" id="payment-form">
						<div class="col-md-7">
							<!-- Billing Details -->
							<div class="billing-details">
								<div class="section-title">
									<h3 class="title">Billing address</h3>
								</div>
								<div class="form-group">
									<input class="input" type="text" name="Name" id="name" placeholder="Name"
										value="{{checkOutAddress.Name}}">
								</div>
								<div class="form-group">
									<input class="input" type="text" name="Address" id="address" placeholder="Address"
										value="{{checkOutAddress.Address}}">
								</div>
								<div class="form-group">
									<input class="input" type="text" name="City" id="city" placeholder="City"
										value="{{checkOutAddress.City}}">
								</div>
								<div class="form-group">
									<input class="input" type="text" name="State" id="state" placeholder="State"
										value="{{checkOutAddress.State}}">
								</div>
								<div class="form-group">
									<input class="input" type="text" name="Country" id="country" placeholder="Country"
										value="{{checkOutAddress.Country}}">
								</div>
								<div class="form-group">
									<input class="input" type="text" name="Pincode" id="pincode" placeholder="ZIP Code"
										value="{{checkOutAddress.Pincode}}">
								</div>
								<div class="form-group">
									<input class="input" type="tel" name="Number" id="number" placeholder="Telephone"
										value="{{checkOutAddress.Number}}">
								</div>
							</div>
							<!-- /Billing Details -->
						</div>

						<!-- Order Details -->
						<div class="col-md-5 order-details">
							<div class="section-title text-center">
								<h3 class="title">Your Order</h3>
							</div>
							<div class="order-summary">
								<div class="order-col">
									<div><strong>PRODUCT</strong></div>
									<div><strong>PRICE</strong></div>
									<div><strong>TOTAL</strong></div>
								</div>
								<div class="order-products">
									{{#each cartDetailes.products}}
									<div class="order-col">
										<div>{{this.quantity}}x {{productId.name}}</div>
										<div>{{this.price}}</div>
										<div>{{this.subtotal}}</div>
									</div>
									{{/each}}
								</div>
								<div class="order-col">
									<div><strong>TOTAL</strong></div>
									<div><strong class="order-total">{{cartDetailes.total}}</strong></div>
								</div>
							</div>

							<div class="payment-method">
								<div class="input-radio">
									<input type="radio" name="payment" id="payment-2" value="ONLINE">
									<label for="payment-2">
										<span></span>
										Online Payment
									</label>

								</div>
								<div class="input-radio">
									<input type="radio" name="payment" id="payment-3" value="COD">
									<label for="payment-3">
										<span></span>
										Cash on Delivery
									</label>

								</div>
							</div>
							{{#if cartDetailes}}
							<button class="primary-btn order-submit" type="submit"><a>Place order</a></button>
							{{/if}}
						</div>
						<!-- /Order Details -->
					</form>
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /SECTION -->


